{
  "name": "starter-template",
  "version": "1.0.0",
  "description": "Node starter template",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "npm run build:tailwind && nodemon src/index.ts",
    "build:tailwind": "npx @tailwindcss/cli -i static/css/style.css -o static/css/output.css",
    "build:tailwind:dev": "npx @tailwindcss/cli -i static/css/style.css -o static/css/output.css --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.9",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.8",
    "nodemon": "^3.1.9",
    "tailwindcss": "^4.0.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
